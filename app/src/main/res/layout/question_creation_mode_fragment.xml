<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset_3_cropped"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="50dp"
>
            
            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:id="@+id/inval">


                <ImageView
                    android:id="@+id/test_button"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:src="@drawable/test_transition"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_gravity="center"
                    android:src="@drawable/circle_switcher"
                    android:id="@+id/answer_text"

                     />





            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true">


                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="?android:selectableItemBackgroundBorderless"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:stateListAnimator="@anim/anim"
                    android:text="A"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/googleplus_icon"
                    android:id="@+id/answer_camera"

                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="?android:selectableItemBackgroundBorderless"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:stateListAnimator="@anim/anim"
                    android:text="A"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/facebook_icon"
                    android:id="@+id/answer_voice"

                    />

            </FrameLayout>



        </RelativeLayout>

</LinearLayout>